    var filterPersonales = function (checkItem, checked) {
        var tree = App.TreeWest,
            regex;

        if (checked) {
            tree.clearFilter(true);
            regex = new RegExp("<span>&nbsp;</span>");
            tree.filterBy(function (node) {
                return regex.test(node.data.text);
            });
        } else {
            tree.clearFilter(true);
        }
