                             Html.X().ComboBoxFor(n => n.ESTADO)
                                               .Items(AppSaludMVC.Models.CombosGenericos.GetEstadoRegistro("EstadoRegistro").Select(d => new ListItem(d.Name, d.ID)))
                                .FieldLabel("Estadoddd")
