@section cabecera
{

    <link rel="stylesheet" href="@Url.Content("~/resources/css/main.css")" />

<style>
    html body {
        padding: 0px;
        background: none;
        background: none;
        background: none;
        background-attachment: fixed;
        background-position: center;
        font-family: tahoma,verdana,sans-serif;
        background-color: #ffffff;
    }
</style>

    <script>
        function eventoRenderForm() {
            var kk = 400;
            var scrH = screen.height;
            if (!parent.App.PanelMainSouth.collapsed) {
                parent.App.PanelMainSouth.collapse();
            } else {
                var northH = (parent.App.PanelMainNorth != null ? (parent.App.PanelMainNorth.getHeight() != null ? parent.App.PanelMainNorth.getHeight() : 20) : 20);
                var southH = 30;
                if (southH == 0) {
                    southH = 30;
                }
                var dimCentral = (scrH - (northH + southH) - kk);                
                App.formactual.setHeight(545);
            }                        
        }

        function eventoVisorEdicionForm(param1) {
            window.location.href = '@Url.Action(Model.campoStr02+"_View", "HClinica")';
        }
    </script>
}

@section cuerpo
{  
@(
 Html.X().Viewport().ID("ViewportXD")
        .AutoScroll(true)
       
            .Layout(LayoutType.VBox)

            .LayoutConfig(
                new VBoxLayoutConfig { Align = VBoxAlign.Stretch }
            )             
        //.Layout(LayoutType.Fit)
        .Items(                    
            X.Panel()
                .ID("formactual")
            .Region(Region.Center)                
            .TopBar(
                    Html.X().Toolbar()
                    .Items(
                        
                        X.Button()
                        .Text("Formulario")
                        .Icon(Icon.ApplicationFormEdit)
                        .ToolTip("Permite volver al Formulario Original")
                        .ID("btnFormBack")
                        .Handler("eventoVisorEdicionForm('');")
                         ,X.ToolbarSeparator()
                         , X.ToolbarSeparator(),
                             X.Label().Text("URL: http://" + showURL),
                        X.ToolbarFill()
                        
                    )          
            )            
            .Header(false)
              .Border(false)              
              .Split(true)
             .Collapsible(true).Height(800)
             //.Header(false)              
                .Loader(
                    Html.X().ComponentLoader()
                    .Listeners(l =>
                    {
                        //EVENTO JAVA SCRIPT
                        l.Load.Handler = "loadReporte(record);";
                    })
                    .ID("compLoaderReporte")
                    .AutoLoad(true)
                            .Url("http://" + showURL)
                    .Mode(LoadMode.Frame)
                    .ReloadOnEvent(false)
                    .DisableCaching(true)
                )
                .Listeners(l =>
                {
                    l.Render.Handler = "eventoRenderForm();";                    
                })                             
        )                             
    )
}